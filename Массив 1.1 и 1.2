using System;

namespace massif
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите элементы массива");
            var array = Array.ConvertAll(Console.ReadLine().Split(' '), s => double.Parse(s));
            
            double max = array[0];
            double sum = 0;
            double sr = 0;
            Console.Write("Массив в обратном направлении = ");
            for (int i = array.Length-1; i >= 0; i--)
            {
                Console.Write(array[i] + " ");
                sum += array[i];
                if (max < array[i])
                {
                    max = array[i];
                }
            }
            sr = sum / array.Length;
            Console.Write("\n" + "Максимальный элемент массива = {0}", max);
            Console.Write("\n" + "Массив где все нулевые элементы заменить на среднее арифметическое = ");
            for (int j = 0; j < array.Length; j++)
            {
                if (array[j] == 0)
                {
                    array[j] = sr;
                }
                Console.Write(array[j] + " ");
            }
        }
    }
}
